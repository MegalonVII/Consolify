{
  "name": "Clean Library Capsule",
  "author": "G1fan",
  "version": "v1.1",
  "manifest_version": 8,
  "patches": {
    "Disable Library Capsule": {
      "type": "checkbox",
      "default": "No",
      "values": {
        "Yes": {
          "disable.css": [
            "bigpicture"
          ]
        },
        "No": {}
      }
    },
    "No Home Text Patch": {
      "type": "checkbox",
      "default": "No",
      "values": {
        "Yes": {
          "notextpatch.css": [
            "bigpicture"
          ]
        },
        "No": {}
      }
    },
    "Background Image": {
      "type": "checkbox",
      "default": "No",
      "values": {
        "Yes": {
          "backgroundimg.css": [
            "bigpicture"
          ]
        },
        "No": {
          "background.css": [
            "bigpicture"
          ]
        }
      }
    },
    "Bold Text": {
      "type": "checkbox",
      "default": "Yes",
      "values": {
        "Yes": {
          "text.css": [
            "bigpicture"
          ]
        },
        "No": {}
      }
    },
    "Outline": {
      "type": "checkbox",
      "default": "Yes",
      "values": {
        "Yes": {
          "outline.css": [
            "bigpicture"
          ]
        },
        "No": {}
      }
    },
    "Outline Size": {
      "type": "slider",
      "default": "3",
      "values": {
        "1": {
          "--g1-stroke-size": [
            "0.5px",
            "bigpicture"
          ]
        },
        "2": {
          "--g1-stroke-size": [
            "1px",
            "bigpicture"
          ]
        },
        "3": {
          "--g1-stroke-size": [
            "1.5px",
            "bigpicture"
          ]
        },
        "4": {
          "--g1-stroke-size": [
            "2px",
            "bigpicture"
          ]
        },
        "Max": {
          "--g1-stroke-size": [
            "2.5px",
            "bigpicture"
          ]
        }
      }
    },
    "Colors": {
      "type": "none",
      "values": {
        "_": {
          "shared.css": [
            "bigpicture"
          ]
        }
      },
      "components": [
        {
          "name": "Text Color",
          "type": "color-picker",
          "on": "_",
          "default": "#fff",
          "css_variable": "g1-font-color",
          "tabs": [
            "bigpicture"
          ]
        },
        {
          "name": "Outline Color",
          "type": "color-picker",
          "on": "_",
          "default": "#000",
          "css_variable": "g1-stroke-color",
          "tabs": [
            "bigpicture"
          ]
        },
        {
          "name": "Background Color",
          "type": "color-picker",
          "on": "_",
          "default": "#333333aa",
          "css_variable": "g1-bg-color",
          "tabs": [
            "bigpicture"
          ]
        },
        {
          "name": "Background Image",
          "type": "image-picker",
          "on": "_",
          "default": "Clean Library Capsule/example_steam.jpg",
          "css_variable": "g1-bg-image",
          "tabs": [
            "bigpicture"
          ]
        }
      ]
    }
  },
  "id": "60dcd4b3-ec7c-453a-a565-44385bffc1ff"
}